source 'https://rubygems.org'

gem 'ruby-vips'           # 圖片處理
gem 'httparty'           # HTTP 請求
gem 'dotenv'             # 環境變數管理
gem 'rubyXL'            # Excel 檔案處理
gem 'json-schema'        # JSON Schema 驗證
gem 'base64'            # Base64 編碼
gem 'parallel'          # 並行處理

group :development, :test do
  gem 'rspec'            # 測試框架
  gem 'rubocop'          # 程式碼風格檢查
  gem 'pry'              # 除錯工具
end
